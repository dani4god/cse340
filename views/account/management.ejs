<h1><%= title %></h1>

<%- messages() %>

<div class="account-management-container">
  <% if (locals.loggedin && locals.accountData) { %>
    <h2>Welcome <%= accountData.account_firstname %></h2>
    
    <div class="account-actions">
      <p><a href="/account/update/<%= accountData.account_id %>">Update Account Information</a></p>
      <p><a href="/review/my-reviews">My Reviews</a></p> <!-- MOVED HERE - for all users -->
    </div>
    
    <% if (accountData.account_type === "Employee" || accountData.account_type === "Admin") { %>
      <h3>Inventory Management</h3>
      <p><a href="/inv/">Manage Inventory</a></p>
    <% } %>
  <% } else { %>
    <p>Please <a href="/account/login">log in</a> to access your account.</p>
  <% } %>
</div>