<h1><%= title %></h1>

<%- messages() %>

<div class="form-container delete-confirmation">
  <div class="warning-message">
    <h2>⚠️ Confirm Deletion</h2>
    <p>Are you sure you want to delete this review? This action cannot be undone.</p>
  </div>
  
  <div class="review-preview">
    <h3><%= review.inv_year %> <%= review.inv_make %> <%= review.inv_model %></h3>
    
    <div class="review-rating">
      <strong>Rating:</strong>
      <% for(let i = 1; i <= 5; i++) { %>
        <%= i <= review.review_rating ? '★' : '☆' %>
      <% } %>
    </div>
    
    <div class="review-text-preview">
      <strong>Review:</strong>
      <p><%= review.review_text %></p>
    </div>
    
    <div class="review-date">
      <strong>Submitted:</strong> <%= new Date(review.review_date).toLocaleDateString() %>
    </div>
  </div>
  
  <form action="/review/delete" method="post">
    <input type="hidden" name="review_id" value="<%= review.review_id %>">
    
    <div class="form-actions">
      <button type="submit" class="btn-delete-confirm">Yes, Delete Review</button>
      <a href="/review/my-reviews" class="btn-cancel">Cancel</a>
    </div>
  </form>
</div>

<style>
.delete-confirmation {
  max-width: 600px;
}

.warning-message {
  background-color: #fff3cd;
  border: 2px solid #ffc107;
  border-radius: 8px;
  padding: 1.5rem;
  margin-bottom: 2rem;
  text-align: center;
}

.warning-message h2 {
  color: #856404;
  margin-bottom: 1rem;
  font-size: 1.5rem;
}

.warning-message p {
  color: #856404;
  font-size: 1.1rem;
  margin: 0;
}

.review-preview {
  background-color: #f9f9f9;
  border: 1px solid #e0e0e0;
  border-radius: 8px;
  padding: 1.5rem;
  margin-bottom: 2rem;
}

.review-preview h3 {
  color: #0066cc;
  margin-bottom: 1rem;
  font-size: 1.25rem;
}

.review-rating,
.review-date {
  margin: 1rem 0;
  color: #666666;
}

.review-rating {
  font-size: 1.2rem;
}

.review-rating .star,
.review-rating .empty-star {
  color: #ffa500;
}

.review-text-preview {
  margin: 1rem 0;
}

.review-text-preview strong {
  display: block;
  margin-bottom: 0.5rem;
  color: #000000;
}

.review-text-preview p {
  color: #333333;
  line-height: 1.6;
  padding: 1rem;
  background-color: #ffffff;
  border-radius: 4px;
}

.form-actions {
  display: flex;
  gap: 1rem;
  justify-content: center;
  margin-top: 2rem;
}

.btn-delete-confirm {
  background-color: #dc3545;
  color: #ffffff;
  padding: 0.875rem 2rem;
  font-size: 1rem;
  font-weight: bold;
  border: 2px solid #dc3545;
  border-radius: 4px;
  cursor: pointer;
  transition: all 0.3s;
}

.btn-delete-confirm:hover,
.btn-delete-confirm:focus {
  background-color: #c82333;
  border-color: #c82333;
  outline: 3px solid #000000;
  outline-offset: 2px;
}

.btn-cancel {
  background-color: #ffffff;
  color: #666666;
  padding: 0.875rem 2rem;
  font-size: 1rem;
  font-weight: bold;
  border: 2px solid #cccccc;
  border-radius: 4px;
  text-decoration: none;
  cursor: pointer;
  transition: all 0.3s;
  display: inline-block;
}

.btn-cancel:hover,
.btn-cancel:focus {
  background-color: #f0f0f0;
  border-color: #999999;
  outline: 3px solid #000000;
  outline-offset: 2px;
}

@media screen and (max-width: 768px) {
  .form-actions {
    flex-direction: column;
  }
  
  .btn-delete-confirm,
  .btn-cancel {
    width: 100%;
  }
}
</style>
